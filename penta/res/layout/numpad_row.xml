    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        layout="@layout/numpad_button"
        android:padding="0dp" />

    <include
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        layout="@layout/numpad_button" />

    <include
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        layout="@layout/numpad_button" />

</LinearLayout>
